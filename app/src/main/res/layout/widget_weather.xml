<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/weather_icon"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/image_icon"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:textSize="24sp"
        tools:text="Vranje" />

    <TextView
        android:id="@+id/text_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_icon"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@id/image_icon"
        tools:text="21.11.2018" />

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/image_refresh"
        android:textColor="@android:color/black"
        android:layout_marginEnd="8dp"
        android:textSize="32sp"
        tools:text="12 C" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text_temperature"
        android:layout_alignBottom="@id/image_icon"
        tools:text="Clear sky" />

    <ImageView
        android:id="@+id/image_refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_refresh_black_24dp" />

</RelativeLayout>