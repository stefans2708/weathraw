<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_weather"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_city"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_weather"
        android:textSize="14sp"
        tools:text="Vranje" />

    <TextView
        android:id="@+id/txt_temperature"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/txt_city"
        android:textSize="14sp"
        tools:text="23" />

    <TextView
        android:id="@+id/txt_weather_description"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_city"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/img_weather"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textSize="14sp"
        tools:text="clear sky" />

    <TextView
        android:id="@+id/view_separator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/img_weather" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_separator"
        android:baselineAligned="false"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_day_in_week_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Monday" />

            <ImageView
                android:id="@+id/img_next_day_1"
                android:layout_width="50dp"
                android:contentDescription="@null"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_day_1_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:maxLines="1"
                    tools:text="-12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="/" />

                <TextView
                    android:id="@+id/txt_day_1_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    tools:text="-2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_day_in_week_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tuesday" />

            <ImageView
                android:id="@+id/img_next_day_2"
                android:layout_width="50dp"
                android:contentDescription="@null"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_day_2_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:maxLines="1"
                    tools:text="-12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="/" />

                <TextView
                    android:id="@+id/txt_day_2_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    tools:text="-2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_day_in_week_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Wednesday" />

            <ImageView
                android:id="@+id/img_next_day_3"
                android:layout_width="50dp"
                android:contentDescription="@null"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_day_3_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:maxLines="1"
                    tools:text="-12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="/" />

                <TextView
                    android:id="@+id/txt_day_3_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    tools:text="-2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_day_in_week_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Thursday" />

            <ImageView
                android:id="@+id/img_next_day_4"
                android:layout_width="50dp"
                android:contentDescription="@null"
                android:layout_height="50dp"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_day_4_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:maxLines="1"
                    tools:text="-12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="/" />

                <TextView
                    android:id="@+id/txt_day_4_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"
                    tools:text="-2" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>